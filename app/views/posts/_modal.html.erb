<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal-<%= post.id %>">
  view content
</button>
<!-- Modal -->
<div class="modal fade" id="exampleModal-<%= post.id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel"><h3><%= post.title %></h3></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p><%= post.content %></p>
      </div>
      <div class="modal-footer">
         <%= link_to "close", root_path, class: 'btn btn-secondary' %>
        <%= link_to "view details", post_path(post), class:'btn btn-primary'  %>
      </div>
    </div>
  </div>
</div>
